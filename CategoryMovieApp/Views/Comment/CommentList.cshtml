@using CategoryMovieApp.Models
@using X.PagedList.Mvc.Bootstrap4.Core;
@using X.PagedList;
@using X.PagedList.Mvc.Core;
@model PagedList<Comment>
@{
    ViewData["Title"] = "CommentList";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}
<div class="container-fluid">
    <h2 class="text-center mt-3 mb-3">Yorum Bilgileri</h2>
    <table class="table table-hover table-striped table-bordered text-center">
        <tr>
            <th class="cid">Id</th>
            <th class="ctr">Yazı</th>
            <th class="cen">Eklenme Tarihi</th>
            <th class="cst">Beğeni</th>
            <th class="cst">Film</th>
            <th class="cst">Kullanıcı</th>
            <th class="cst">Statü</th>
            <th class="cup">Güncelle</th>
            <th class="cdet">Detay</th>
            <th class="cdel">Sil</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>@item.CommentId</td>
                <td>@item.CommentText</td>
                <td>@item.CommentDate</td>
                <td>@item.CommentLike</td>
                <td>@item.Movie.MovieNameTR</td>
                <td>@item.User.UserName</td>
                <td>
                    <a id="statu" class="@item.CommentStatu">
                        @item.CommentStatu
                    </a>
                </td>
                <td>
                    <a class="btn-warning text-white" href="/Comment/CommentUpdate/@item.CommentId">
                        <i class="fa fa-refresh"></i>
                    </a>
                </td>
                <td>
                    <a class="btn-danger" href="/Comment/CommentInfo/@item.CommentId">
                        <i class="fa fa-info"></i>
                    </a>
                </td>
                <td>
                    <a class="btn-primary" href="/Comment/CommentDelete/@item.CommentId">
                        <i class="fa fa-trash"></i>
                    </a>
                </td>
            </tr>
        }
    </table>
    <div class="row justify-content-center">
        @Html.PagedListPager((IPagedList)Model,page=>Url.Action("CommentyList",new {page}),Bootstrap4PagedListRenderOptions.ClassicPlusFirstAndLast)
    </div>
</div>
