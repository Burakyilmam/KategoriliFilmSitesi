@using CategoryMovieApp.Models
@model CategoryMovieApp.Models.Comment
@{
    ViewData["Title"] = "GetComment";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}

<div class="container-fluid">
    <h2 class="text-center mt-3 mb-3">Kategori Ekleme Paneli</h2>
    @using (Html.BeginForm("CommentUpdate", "Comment", FormMethod.Post))
    {
        @Html.TextBoxFor(x=>x.CommentId,new {@style="display:none;",@class="inputName"})
        @Html.TextBoxFor(x=>x.CommentText,new {@class="inputName"})
        @Html.TextBoxFor(x=>x.CommentDate,new {@class="inputName"})
        @Html.DropDownList("CommentStatu", new List<SelectListItem>
        {
        new SelectListItem { Value = "True", Text = "Aktif" },
        new SelectListItem { Value = "False", Text = "Pasif" }
        }, "-- Seçiniz --", new {@class="inputName"})
        @Html.DropDownListFor(model => model.MovieId, ((IEnumerable<SelectListItem>)ViewBag.Movies).Select(c => new SelectListItem
        {
        Value = c.Value,
        Text = $"{c.Value} - {c.Text}"
        }),new {@class="inputName"})
        @Html.DropDownListFor(model => model.UserId, ((IEnumerable<SelectListItem>)ViewBag.Users).Select(c => new SelectListItem
        {
        Value = c.Value,
        Text = $"{c.Value} - {c.Text}"
        }),new {@class="inputName"})
        <br />
        <div class="addBtn">
            <button class="btn-success text-center"><i class="fa fa-plus"></i></button>
        </div>
    }
</div>

