@model CategoryMovieApp.Models.Year
@{
    ViewData["Title"] = "GetYear";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}

<div class="container-fluid">
    <h2 class="text-center mt-3 mb-3">Kategori Ekleme Paneli</h2>
    @using (Html.BeginForm("YearUpdate", "Year", FormMethod.Post))
    {
        @Html.TextBoxFor(x=>x.YearId,new {@style="display:none;",@class="inputName"})
        @Html.TextBoxFor(x=>x.YearName,new {@class="inputName"})
        @Html.DropDownList("YearStatu", new List<SelectListItem>
        {
        new SelectListItem { Value = "True", Text = "Aktif" },
        new SelectListItem { Value = "False", Text = "Pasif" }
        }, "-- Seçiniz --", new {@class="inputName"})
        <br />
        <div class="addBtn">
            <button class="btn-success text-center"><i class="fa fa-plus"></i></button>
        </div>
    }
</div>

