@using CategoryMovieApp.Models
@using X.PagedList.Mvc.Bootstrap4.Core;
@using X.PagedList;
@using X.PagedList.Mvc.Core;
@model PagedList<Year>
@{
    ViewData["Title"] = "YearList";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}
<div class="container-fluid">
    <h2 class="text-center mt-3 mb-3">Kategori Bilgileri</h2>
    <table class="table table-hover table-striped table-bordered text-center">
        <tr>
            <th class="cid">Id</th>
            <th class="ctr">Ad</th>
            <th class="cst">Statü</th>
            <th class="cup">Güncelle</th>
            <th class="cdet">Detay</th>
            <th class="cdel">Sil</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>@item.YearId</td>
                <td>@item.YearName</td>
                <td>
                    <a id="statu" class="@item.YearStatu">
                        @item.YearStatu
                    </a>
                </td>
                <td>
                    <a class="btn-warning text-white" href="/Year/GetYear/@item.YearId">
                        <i class="fa fa-refresh"></i>
                    </a>
                </td>
                <td>
                    <a class="btn-danger" href="/Year/GetYear/@item.YearId">
                        <i class="fa fa-info"></i>
                    </a>
                </td>
                <td>
                    <a class="btn-primary" href="/Year/YearDelete/@item.YearId">
                        <i class="fa fa-trash"></i>
                    </a>
                </td>
            </tr>
        }
    </table>
    <div class="row justify-content-center">
        @Html.PagedListPager((IPagedList)Model,page=>Url.Action("YearList",new {page}),Bootstrap4PagedListRenderOptions.ClassicPlusFirstAndLast)
    </div>
    <div class="text-center">
        <a class="btn-success" href="/Year/YearAdd/">
            <i class="fa fa-plus"></i>
        </a>
    </div>
</div>
