@using X.PagedList
@using X.PagedList.Mvc.Bootstrap4.Core;
@using X.PagedList.Mvc.Core
@using CategoryMovieApp.Models
@model IPagedList<Movie>
@{
    ViewData["Title"] = "MovieListEN";
    Layout = "~/Views/Shared/_LayoutEN.cshtml";
}
<style>
    .item {
        position: relative;
        overflow: hidden;
    }

    .BadgeIMDB {
        position: absolute;
        overflow: hidden;
        z-index: 1;
        font: bold 13px Sans-Serif;
        position: absolute;
        color: #000;
        border-radius: 30px 30px 30px 30px;
        text-align: center;
        text-shadow: rgba(255, 255, 255, 0.5) 0px 1px 0px;
        top: 20px;
        left: 30px;
        padding: 10px 10px;
        background-color: orangered;
        background-image: -webkit-gradient(linear, left top, left bottom, from(orangered), to(darkorange));
        background-image: -webkit-linear-gradient(top, orangered, darkorange);
        background-image: -moz-linear-gradient(top, orangered, darkorange);
        background-image: -ms-linear-gradient(top, orangered, darkorange);
        background-image: -o-linear-gradient(top, orangered, darkorange);
    }

    .BadgeLanguage {
        position: absolute;
        overflow: hidden;
        z-index: 1;
        font: bold 13px Sans-Serif;
        position: absolute;
        color: #000;
        border-radius: 30px 30px 30px 30px;
        text-align: center;
        text-shadow: rgba(255, 255, 255, 0.5) 0px 1px 0px;
        width: 120px;
        top: 20px;
        right: 30px;
        padding: 7px 0;
    }

    .Dublaj {
        background-color: #BFDC7A;
        background-image: -webkit-gradient(linear, left top, left bottom, from(#BFDC7A), to(#8EBF45));
        background-image: -webkit-linear-gradient(top, #BFDC7A, #8EBF45);
        background-image: -moz-linear-gradient(top, #BFDC7A, #8EBF45);
        background-image: -ms-linear-gradient(top, #BFDC7A, #8EBF45);
        background-image: -o-linear-gradient(top, #BFDC7A, #8EBF45);
    }

    .Dubbing {
        background-color: #BFDC7A;
        background-image: -webkit-gradient(linear, left top, left bottom, from(#BFDC7A), to(#8EBF45));
        background-image: -webkit-linear-gradient(top, #BFDC7A, #8EBF45);
        background-image: -moz-linear-gradient(top, #BFDC7A, #8EBF45);
        background-image: -ms-linear-gradient(top, #BFDC7A, #8EBF45);
        background-image: -o-linear-gradient(top, #BFDC7A, #8EBF45);
    }

    .Altyazı {
        background-color: #06cbde;
        background-image: -webkit-gradient(linear, left top, left bottom, from(#06cbde), to(#08e3f8));
        background-image: -webkit-linear-gradient(top, #06cbde, #08e3f8);
        background-image: -moz-linear-gradient(top, #06cbde, #08e3f8);
        background-image: -ms-linear-gradient(top, #06cbde, #08e3f8);
        background-image: -o-linear-gradient(top, #06cbde, #08e3f8);
    }

    .Subtitle {
        background-color: #06cbde;
        background-image: -webkit-gradient(linear, left top, left bottom, from(#06cbde), to(#08e3f8));
        background-image: -webkit-linear-gradient(top, #06cbde, #08e3f8);
        background-image: -moz-linear-gradient(top, #06cbde, #08e3f8);
        background-image: -ms-linear-gradient(top, #06cbde, #08e3f8);
        background-image: -o-linear-gradient(top, #06cbde, #08e3f8);
    }

    .Orjinal {
        background-color: #ffa63a;
        background-image: -webkit-gradient(linear, left top, left bottom, from(darkorange), to(#ffa63a));
        background-image: -webkit-linear-gradient(top, darkorange, #ffa63a);
        background-image: -moz-linear-gradient(top, darkorange, #ffa63a);
        background-image: -ms-linear-gradient(top, darkorange, #ffa63a);
        background-image: -o-linear-gradient(top, darkorange, #ffa63a);
    }

    .Original {
        background-color: #ffa63a;
        background-image: -webkit-gradient(linear, left top, left bottom, from(darkorange), to(#ffa63a));
        background-image: -webkit-linear-gradient(top, darkorange, #ffa63a);
        background-image: -moz-linear-gradient(top, darkorange, #ffa63a);
        background-image: -ms-linear-gradient(top, darkorange, #ffa63a);
        background-image: -o-linear-gradient(top, darkorange, #ffa63a);
    }

    .Fragman {
        background-color: #e1e102;
        background-image: -webkit-gradient(linear, left top, left bottom, from(yellow), to(#e1e102));
        background-image: -webkit-linear-gradient(top, yellow, #e1e102);
        background-image: -moz-linear-gradient(top, yellow, #e1e102);
        background-image: -ms-linear-gradient(top, yellow, #e1e102);
        background-image: -o-linear-gradient(top, yellow, #e1e102);
    }

    .Teaser {
        background-color: #e1e102;
        background-image: -webkit-gradient(linear, left top, left bottom, from(yellow), to(#e1e102));
        background-image: -webkit-linear-gradient(top, yellow, #e1e102);
        background-image: -moz-linear-gradient(top, yellow, #e1e102);
        background-image: -ms-linear-gradient(top, yellow, #e1e102);
        background-image: -o-linear-gradient(top, yellow, #e1e102);
    }

    .Info {
        color: white;
        background-color: #0b0b0bde;
        width: 99.5%;
        height: 100px;
        margin-left: 1px;
        margin-top: -10px;
    }

    .Category {
        text-align: end;
    }

    .Year {
        text-align: start;
    }

    .Text {
        text-align: center;
    }

    .Category, .Year, .Text {
        padding-top: 10px;
    }

    .Text {
        padding-bottom: 20px;
    }

</style>
<div class="container-fluid">
    <div class="row">
        <div class="col-sm Movies">
            <div class="row">
                <div class="Filter">
                    <ul>
                        <a href="/Movie/NewAddedEN">
                        <li>New Added</li>
                        </a>
                        <a href="/Movie/MostLike">
                        <li>Most Like</li>
                        </a>
                        <a href="/Movie/MostCommentEN">
                        <li>Most Comment</li>
                        </a>
                        <a href="/Movie/MostView">
                        <li>Most View</li>
                        </a>
                        <a href="/Movie/IMDB7EN">
                        <li>IMDB 7+</li>
                        </a>
                    </ul>
                </div>
            </div>
            <div class="row MovieArea">
                @foreach (var item in Model)
                {
                    <div class="col-sm-6 col-md-4 col-lg-3 item">
                        <a href="/Movie/MoviePageEN/@item.MovieId">
                            <span class="BadgeIMDB">@item.MovieIMDB</span>
                            <span class="BadgeLanguage @item.MovieBadgeEN">@item.MovieBadgeEN</span>
                            <img src="@item.MovieImageUrl" alt="">
                        </a>
                        <div class="row Info">
                            <div class="col-6 Year">@item.Year.YearName</div>
                            <div class="col-12 Text">@item.MovieNameEN</div>
                        </div>
                    </div>
                }
            </div>
            <div class="row justify-content-center">
                @Html.PagedListPager((IPagedList)Model,page=>Url.Action("MovieList",new {page}),Bootstrap4PagedListRenderOptions.ClassicPlusFirstAndLast)
            </div>
        </div>
        <div class="col-md-2">
            <div class="row">
                <div class="col-md-12 text-center Categories">
                    <h5 class="mt-2">Categories</h5>
                    @await Component.InvokeAsync("ListCategoryEN")
                </div>
                <div class="col-12 Years text-center">
                    <h5 class="mt-2">Years</h5>
                    @await Component.InvokeAsync("ListYearEN")
                </div>
                <div class="col-12 Country text-center">
                    <h5 class="mt-2">Countries</h5>
                    @await Component.InvokeAsync("ListCountryEN")
                </div>
            </div>
        </div>
    </div>
</div>

