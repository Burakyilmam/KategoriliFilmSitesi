@using CategoryMovieApp.Models
@model IEnumerable<Movie>
@{
    ViewData["Title"] = "MoviePage";
    Layout = "~/Views/Shared/_LayoutTR.cshtml";
}

@foreach (var item in Model)
{
    <div class="container-fluid">
        <div class="row">
            <div style="text-align:start;" class="col-6 mt-2 mb-2">@item.MovieNameTR</div>
            <div style="text-align:end;" class="col-6 mt-2 mb-2"><span style="padding:15px;background-color:orangered;border-radius:30px;text-align:center;font-weight:bolder;">@item.MovieIMDB</span></div>
            <div style="text-align:start;" class="col-6 mt-2 mb-2">
                <a href="/Movie/MovieListNoComment/">Ana Sayfa</a> / <a href="/Movie/GetCategoryMovieNoComment/@item.CategoryId">@item.Category.CategoryNameTR</a>
            </div>
            <div style="text-align:end;" class="col-6 mt-2 mb-2">
                <a href="/Movie/MovieListNoComment/">Ana Sayfa</a> / <a href="/Movie/GetYearMovieNoComment/@item.YearId">@item.Year.YearName</a>
            </div>
            <div style="display:flex;flex-wrap:wrap;justify-content:center;text-align:center;" class="col-12">
                <div style="border:1px solid black;padding:5px;" class="col"><a href="">Fragman</a></div>
                <div style="border:1px solid black;padding:5px" class="col"><a href="">Link 1</a></div>
                <div style="border:1px solid black;padding:5px;" class="col"><a href="">Link 2</a></div>
                <div style="border:1px solid black;padding:5px;" class="col"><a href="">Link 3</a></div>
            </div>
            <div class="col-12">
                <iframe width="100%" height="500px" src="https://www.youtube.com/embed/vwhD6Z7nArg" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen></iframe>
            </div>
            <div class="col-6">
                <div class="col-12">
                    <img style="width:100%;height:500px;margin-left:-15px;" src="@item.MovieImageUrl">
                </div>
            </div>
            <div class="col-6">
                <div class="col-12 mb-2">@item.MovieDescription</div>
                <div class="col-12 mt-2 mb-2"><a href="/Movie/GetLanguageMovieNoComment/@item.LanguageId">@item.Language.LanguageNameTR</a></div>
                <div class="col-12 mt-2 mb-2">
                    Uzunluk : @item.MovieLength
                </div>
                <div class="col-12 mt-2 mb-2">
                    İzlenme : @item.MovieViewCount
                </div>
                <div class="col-12 mt-2 mb-2">
                    Yıl ve Ülke : <a href="/Movie/GetYearMovieNoComment/@item.YearId">@item.Year.YearName</a> - <a href="/Movie/GetCountryMovieNoComment/@item.CountryId">@item.Country.CountryNameTR</a>
                </div>
                <div class="col-12 mt-2 mb-2">
                    Tür : <a href="/Movie/GetCategoryMovieNoComment/@item.CategoryId">@item.Category.CategoryNameTR</a>
                </div>
            </div>
            <div class="col-12 mt-2 mb-2">
                @await Component.InvokeAsync("ListActor",new {id=ViewBag.Id})
            </div>
        </div>
    </div>
}
@await Component.InvokeAsync("ListComment",new {id=ViewBag.Id})
<div class="col-12">
    <p class="bg-secondary text-white p-3" style="border-radius:10px;">
        Sadece kayıtlı üyeler yorum yapabilir.Yorum Yapabilmeniz için üye girişi yapmanız gerekmektedir.Eğer üye değilseniz yan tarafta bulunan kayıt ol butonu ile üye olabilirsiniz.
        <a class="btn-light m-2" style="padding:10px;border-radius:10px" href="/Movie/MovieList/">
            Giriş Yap
        </a>
        <a class="btn-danger" style="padding:10px;border-radius:10px" href="/Login/Register/">
            Üye Ol
        </a>
    </p>
</div>