@using X.PagedList
@using X.PagedList.Mvc.Core
@using CategoryMovieApp.Models
@model IPagedList<Movie>
@{
    ViewData["Title"] = "MovieList";
    Layout = "~/Views/Shared/_LayoutTR.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-sm Movies">
            <div class="row">
                <div class="Filter">
                    <ul>
                        <a href="/Movie/NewAdded">
                        <li>Yeni Eklenenler</li>
                        </a>
                        <a href="">
                        <li>Çok Beğenilen</li>
                        </a>
                        <a href="/Movie/MostComment">
                        <li>Çok Yorumlanan</li>
                        </a>
                        <a href="">
                        <li>Çok İzlenen</li>
                        </a>
                        <a href="/Movie/IMDB7">
                        <li>IMDB 7+</li>
                        </a>
                    </ul>
                </div>
            </div>
            <div class="row MovieArea">
                @foreach(var item in Model)
                {
                    <div class="col-sm-6 col-md-4 col-lg-3 MovieCard">
                        <a href="/Movie/MoviePage/@item.MovieId"><img src="@item.MovieImageUrl" alt=""></a>
                        <a class="MovieName" href="">@item.MovieNameTR</a>
                    </div>
                }
            </div>
            <div class="row text-center Page">
                @Html.PagedListPager((IPagedList)Model,page=>Url.Action("MovieList",new {page}))
            </div>
        </div>
        <div class="col-md-2 CategoryArea">
            <div class="row">
                <div class="col-md-12 text-center Categories">
                    <h5 class="mt-2">Kategori</h5>
                    @await Component.InvokeAsync("ListCategory")
                </div>
                <div class="col-12 Years text-center">
                    <h5 class="mt-2">Yıl</h5>
                    @await Component.InvokeAsync("ListYear")
                </div>
                <div class="col-12 Country text-center">
                    <h5 class="mt-2">Ülke</h5>
                    @await Component.InvokeAsync("ListCountry")
                </div>
            </div>
        </div>
    </div>
</div>

