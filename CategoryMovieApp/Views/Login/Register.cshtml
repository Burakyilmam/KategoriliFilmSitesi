
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_LayoutTR.cshtml";
}
<div class="container-fluid">
    <div style="text-center;display;flex;justify-content:center;flex-wrap:wrap" class="row">
        <h1 class="mt-4 mb-4 col-12 text-center">Kullanıcı Kayıt Formu</h1>
        <form class="text-center" action="#" method="post">
            <input class="mt-2 mb-2" style="width:100%" type="text" placeholder="Kullanıcı Adı" name="UserName" />
            <input class="mt-2 mb-2" style="width:100%" type="password" placeholder="Parola" name="UserPassword" />
            <input style="padding:6px;border-radius:5px;" class="btn-success text-center mt-2" type="submit" value="Ekle" />
        </form>
    </div>
