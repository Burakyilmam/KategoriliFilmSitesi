@model CategoryMovieApp.Models.User
@{
    ViewData["Title"] = "GetUser";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}

<div class="container-fluid">
    <h2 class="text-center mt-3 mb-3">User Paneli</h2>
    @using (Html.BeginForm("UserUpdate", "User", FormMethod.Post))
    {
        @Html.TextBoxFor(x=>x.UserId,new {@style="display:none;",@class="inputName"})
        @Html.TextBoxFor(x=>x.UserName,new {@class="inputName"})
        @Html.TextBoxFor(x=>x.UserPassword,new {@class="inputName"})
        @Html.DropDownList("UserStatu", new List<SelectListItem>
    {
    new SelectListItem { Value = "True", Text = "Aktif" },
    new SelectListItem { Value = "False", Text = "Pasif" }
    }, "-- Seçiniz --", new {@class="inputName"})
        <br />
        <div class="addBtn">
            <button class="btn-success text-center"><i class="fa fa-plus"></i></button>
        </div>
    }
</div>

